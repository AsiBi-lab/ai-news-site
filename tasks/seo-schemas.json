{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "AI Deck - JSON-LD Schema Templates",
  "description": "Production-ready Schema.org JSON-LD templates for SEO optimization. Replace {{PLACEHOLDERS}} with dynamic values.",
  "version": "1.0.0",
  "lastUpdated": "2025-12-10",

  "schemas": {

    "WebSite": {
      "description": "Main website schema with SearchAction for Google sitelinks search box. Use on homepage and in global layout.",
      "usage": "Include in <head> of homepage or root layout. Enables site search in Google results.",
      "requiredFields": ["@context", "@type", "name", "url", "potentialAction"],
      "template": {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "AI Deck",
        "alternateName": "AI Deck - AI Tools Directory",
        "url": "https://aideck.io",
        "description": "Discover and compare the best AI tools. Professional reviews, ratings, and news about artificial intelligence tools and technologies.",
        "inLanguage": "en-US",
        "potentialAction": {
          "@type": "SearchAction",
          "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://aideck.io/search?q={search_term_string}"
          },
          "query-input": "required name=search_term_string"
        },
        "publisher": {
          "@type": "Organization",
          "name": "AI Deck",
          "logo": {
            "@type": "ImageObject",
            "url": "https://aideck.io/logo.png",
            "width": 600,
            "height": 60
          }
        }
      }
    },

    "Organization": {
      "description": "Organization schema with logo and social profiles. Use on homepage and About page.",
      "usage": "Include in homepage <head> and about page. Helps Google understand your brand.",
      "requiredFields": ["@context", "@type", "name", "url", "logo"],
      "template": {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "AI Deck",
        "legalName": "AI Deck",
        "url": "https://aideck.io",
        "logo": {
          "@type": "ImageObject",
          "url": "https://aideck.io/logo.png",
          "width": 600,
          "height": 60,
          "caption": "AI Deck Logo"
        },
        "description": "Professional AI tools directory and news platform. We help businesses and professionals discover, compare, and choose the right AI tools.",
        "foundingDate": "2025",
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Customer Service",
          "email": "{{CONTACT_EMAIL}}",
          "availableLanguage": ["English"]
        },
        "sameAs": [
          "{{TWITTER_URL}}",
          "{{LINKEDIN_URL}}",
          "{{FACEBOOK_URL}}",
          "{{YOUTUBE_URL}}"
        ]
      }
    },

    "Article": {
      "description": "Article schema for blog posts and news articles. Use for all article pages.",
      "usage": "Generate dynamically for each article page. Replace placeholders with article data from database.",
      "requiredFields": ["@context", "@type", "headline", "datePublished", "dateModified", "author", "publisher", "image"],
      "notes": "Google requires: headline (max 110 chars), image (1200x675px recommended), datePublished, dateModified, author, publisher with logo.",
      "template": {
        "@context": "https://schema.org",
        "@type": "Article",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "https://aideck.io/articles/{{ARTICLE_SLUG}}"
        },
        "headline": "{{ARTICLE_TITLE}}",
        "description": "{{ARTICLE_EXCERPT}}",
        "image": {
          "@type": "ImageObject",
          "url": "{{ARTICLE_IMAGE_URL}}",
          "width": 1200,
          "height": 675,
          "caption": "{{ARTICLE_IMAGE_CAPTION}}"
        },
        "datePublished": "{{PUBLISHED_DATE_ISO8601}}",
        "dateModified": "{{MODIFIED_DATE_ISO8601}}",
        "author": {
          "@type": "Person",
          "name": "{{AUTHOR_NAME}}",
          "url": "https://aideck.io/authors/{{AUTHOR_SLUG}}"
        },
        "publisher": {
          "@type": "Organization",
          "name": "AI Deck",
          "logo": {
            "@type": "ImageObject",
            "url": "https://aideck.io/logo.png",
            "width": 600,
            "height": 60
          }
        },
        "articleSection": "{{CATEGORY_NAME}}",
        "keywords": "{{COMMA_SEPARATED_TAGS}}",
        "wordCount": "{{WORD_COUNT}}",
        "inLanguage": "en-US"
      }
    },

    "NewsArticle": {
      "description": "NewsArticle schema for time-sensitive news content. Use for breaking news and updates.",
      "usage": "Use instead of Article schema for news items. Includes dateline and news-specific properties.",
      "requiredFields": ["@context", "@type", "headline", "datePublished", "dateModified", "author", "publisher", "image"],
      "template": {
        "@context": "https://schema.org",
        "@type": "NewsArticle",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "https://aideck.io/news/{{ARTICLE_SLUG}}"
        },
        "headline": "{{ARTICLE_TITLE}}",
        "description": "{{ARTICLE_EXCERPT}}",
        "image": {
          "@type": "ImageObject",
          "url": "{{ARTICLE_IMAGE_URL}}",
          "width": 1200,
          "height": 675
        },
        "datePublished": "{{PUBLISHED_DATE_ISO8601}}",
        "dateModified": "{{MODIFIED_DATE_ISO8601}}",
        "author": {
          "@type": "Person",
          "name": "{{AUTHOR_NAME}}"
        },
        "publisher": {
          "@type": "Organization",
          "name": "AI Deck",
          "logo": {
            "@type": "ImageObject",
            "url": "https://aideck.io/logo.png",
            "width": 600,
            "height": 60
          }
        },
        "dateline": "{{CITY}}, {{COUNTRY}}",
        "articleSection": "{{CATEGORY_NAME}}",
        "keywords": "{{COMMA_SEPARATED_TAGS}}"
      }
    },

    "BreadcrumbList": {
      "description": "Breadcrumb navigation schema. Helps Google display breadcrumbs in search results.",
      "usage": "Generate dynamically based on current page path. Add itemListElement for each breadcrumb level.",
      "requiredFields": ["@context", "@type", "itemListElement"],
      "examples": {
        "articlePage": "Home > Articles > Category > Article Title",
        "toolPage": "Home > Tools > Category > Tool Name",
        "categoryPage": "Home > Category Name"
      },
      "template": {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://aideck.io"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "{{LEVEL_2_NAME}}",
            "item": "https://aideck.io/{{LEVEL_2_SLUG}}"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "{{LEVEL_3_NAME}}",
            "item": "https://aideck.io/{{LEVEL_2_SLUG}}/{{LEVEL_3_SLUG}}"
          }
        ]
      }
    },

    "SoftwareApplication": {
      "description": "SoftwareApplication schema for AI tool pages. Essential for tools directory.",
      "usage": "Use on individual AI tool pages. Enables rich snippets with ratings, pricing, and features.",
      "requiredFields": ["@context", "@type", "name", "applicationCategory", "operatingSystem"],
      "notes": "Include aggregateRating for tools with user reviews. Add offers for pricing information.",
      "template": {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "{{TOOL_NAME}}",
        "description": "{{TOOL_DESCRIPTION}}",
        "url": "https://aideck.io/tools/{{TOOL_SLUG}}",
        "image": {
          "@type": "ImageObject",
          "url": "{{TOOL_LOGO_URL}}",
          "width": 400,
          "height": 400
        },
        "applicationCategory": "{{CATEGORY}}",
        "applicationSubCategory": "{{SUBCATEGORY}}",
        "operatingSystem": "Web, Windows, macOS, Linux, iOS, Android",
        "softwareVersion": "{{VERSION}}",
        "releaseNotes": "{{RELEASE_NOTES_URL}}",
        "screenshot": "{{SCREENSHOT_URL}}",
        "offers": {
          "@type": "AggregateOffer",
          "priceCurrency": "USD",
          "lowPrice": "{{LOW_PRICE}}",
          "highPrice": "{{HIGH_PRICE}}",
          "offerCount": "{{PRICING_PLANS_COUNT}}",
          "offers": [
            {
              "@type": "Offer",
              "name": "{{PLAN_NAME}}",
              "price": "{{PRICE}}",
              "priceCurrency": "USD",
              "priceValidUntil": "{{VALID_UNTIL_DATE}}",
              "availability": "https://schema.org/InStock"
            }
          ]
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "{{RATING_VALUE}}",
          "ratingCount": "{{RATING_COUNT}}",
          "bestRating": "5",
          "worstRating": "1"
        },
        "review": [
          {
            "@type": "Review",
            "author": {
              "@type": "Person",
              "name": "{{REVIEWER_NAME}}"
            },
            "datePublished": "{{REVIEW_DATE}}",
            "reviewBody": "{{REVIEW_TEXT}}",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "{{REVIEW_RATING}}",
              "bestRating": "5",
              "worstRating": "1"
            }
          }
        ],
        "featureList": [
          "{{FEATURE_1}}",
          "{{FEATURE_2}}",
          "{{FEATURE_3}}"
        ],
        "requirements": "{{SYSTEM_REQUIREMENTS}}",
        "softwareHelp": {
          "@type": "CreativeWork",
          "url": "{{DOCUMENTATION_URL}}"
        },
        "provider": {
          "@type": "Organization",
          "name": "{{PROVIDER_NAME}}",
          "url": "{{PROVIDER_URL}}"
        }
      }
    },

    "FAQPage": {
      "description": "FAQ schema for pages with question-answer format. Enables FAQ rich snippets.",
      "usage": "Use on FAQ pages or articles with Q&A sections. Each mainEntity is one Q&A pair.",
      "requiredFields": ["@context", "@type", "mainEntity"],
      "notes": "Maximum 50 characters for question, no limit on answer. Use HTML in acceptedAnswer.text.",
      "template": {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "{{QUESTION_1}}",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "{{ANSWER_1}}"
            }
          },
          {
            "@type": "Question",
            "name": "{{QUESTION_2}}",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "{{ANSWER_2}}"
            }
          }
        ]
      }
    },

    "ItemList": {
      "description": "ItemList schema for tool listings, category pages, and search results.",
      "usage": "Use on category pages, tools directory, and filtered listings. Helps Google understand list structure.",
      "requiredFields": ["@context", "@type", "itemListElement"],
      "variations": {
        "toolsList": "List of AI tools",
        "articlesList": "List of articles",
        "categoryList": "List of categories"
      },
      "template": {
        "@context": "https://schema.org",
        "@type": "ItemList",
        "name": "{{LIST_TITLE}}",
        "description": "{{LIST_DESCRIPTION}}",
        "numberOfItems": "{{TOTAL_ITEMS}}",
        "itemListOrder": "https://schema.org/ItemListOrderDescending",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "item": {
              "@type": "{{ITEM_TYPE}}",
              "name": "{{ITEM_NAME}}",
              "url": "https://aideck.io/{{ITEM_PATH}}",
              "image": "{{ITEM_IMAGE}}",
              "description": "{{ITEM_DESCRIPTION}}"
            }
          },
          {
            "@type": "ListItem",
            "position": 2,
            "item": {
              "@type": "{{ITEM_TYPE}}",
              "name": "{{ITEM_NAME}}",
              "url": "https://aideck.io/{{ITEM_PATH}}",
              "image": "{{ITEM_IMAGE}}",
              "description": "{{ITEM_DESCRIPTION}}"
            }
          }
        ]
      }
    },

    "CollectionPage": {
      "description": "CollectionPage schema for category and tag archive pages.",
      "usage": "Use on category pages, tag pages, and other collection/archive pages.",
      "requiredFields": ["@context", "@type", "name", "url"],
      "template": {
        "@context": "https://schema.org",
        "@type": "CollectionPage",
        "name": "{{CATEGORY_NAME}} - AI Tools",
        "description": "{{CATEGORY_DESCRIPTION}}",
        "url": "https://aideck.io/categories/{{CATEGORY_SLUG}}",
        "breadcrumb": {
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home",
              "item": "https://aideck.io"
            },
            {
              "@type": "ListItem",
              "position": 2,
              "name": "{{CATEGORY_NAME}}",
              "item": "https://aideck.io/categories/{{CATEGORY_SLUG}}"
            }
          ]
        },
        "mainEntity": {
          "@type": "ItemList",
          "numberOfItems": "{{ITEMS_COUNT}}",
          "itemListElement": []
        }
      }
    },

    "TechArticle": {
      "description": "TechArticle schema for technical articles and tutorials.",
      "usage": "Use for how-to guides, tutorials, and technical documentation.",
      "requiredFields": ["@context", "@type", "headline", "author", "datePublished"],
      "template": {
        "@context": "https://schema.org",
        "@type": "TechArticle",
        "headline": "{{ARTICLE_TITLE}}",
        "description": "{{ARTICLE_DESCRIPTION}}",
        "url": "https://aideck.io/articles/{{ARTICLE_SLUG}}",
        "image": "{{ARTICLE_IMAGE}}",
        "datePublished": "{{PUBLISHED_DATE}}",
        "dateModified": "{{MODIFIED_DATE}}",
        "author": {
          "@type": "Person",
          "name": "{{AUTHOR_NAME}}"
        },
        "publisher": {
          "@type": "Organization",
          "name": "AI Deck",
          "logo": {
            "@type": "ImageObject",
            "url": "https://aideck.io/logo.png"
          }
        },
        "dependencies": "{{DEPENDENCIES}}",
        "proficiencyLevel": "{{LEVEL}}",
        "about": {
          "@type": "Thing",
          "name": "{{TOPIC}}"
        }
      }
    },

    "Review": {
      "description": "Review schema for tool reviews and product evaluations.",
      "usage": "Use on dedicated review pages for AI tools. Enables review rich snippets.",
      "requiredFields": ["@context", "@type", "itemReviewed", "reviewRating", "author"],
      "template": {
        "@context": "https://schema.org",
        "@type": "Review",
        "name": "{{REVIEW_TITLE}}",
        "reviewBody": "{{REVIEW_TEXT}}",
        "datePublished": "{{PUBLISHED_DATE}}",
        "author": {
          "@type": "Person",
          "name": "{{AUTHOR_NAME}}"
        },
        "itemReviewed": {
          "@type": "SoftwareApplication",
          "name": "{{TOOL_NAME}}",
          "image": "{{TOOL_IMAGE}}",
          "description": "{{TOOL_DESCRIPTION}}",
          "applicationCategory": "{{CATEGORY}}"
        },
        "reviewRating": {
          "@type": "Rating",
          "ratingValue": "{{RATING}}",
          "bestRating": "5",
          "worstRating": "1"
        },
        "publisher": {
          "@type": "Organization",
          "name": "AI Deck"
        },
        "positiveNotes": {
          "@type": "ItemList",
          "itemListElement": [
            "{{PRO_1}}",
            "{{PRO_2}}"
          ]
        },
        "negativeNotes": {
          "@type": "ItemList",
          "itemListElement": [
            "{{CON_1}}",
            "{{CON_2}}"
          ]
        }
      }
    }
  },

  "implementationGuide": {
    "nextjs": {
      "description": "How to implement these schemas in Next.js 15 App Router",
      "steps": [
        "1. Create lib/seo/schemas.ts with helper functions",
        "2. Import templates from this JSON file",
        "3. Create schema generator functions that accept dynamic data",
        "4. Use in page metadata or layout components",
        "5. Render as <script type='application/ld+json'> in <head>"
      ],
      "example": "export function generateArticleSchema(article: Article) { ... }"
    },
    "testing": {
      "tools": [
        "Google Rich Results Test: https://search.google.com/test/rich-results",
        "Schema.org Validator: https://validator.schema.org/",
        "Google Search Console: Monitor performance after deployment"
      ],
      "validation": "Always validate JSON-LD before deploying to production"
    },
    "bestPractices": [
      "Use specific schema types (Article, NewsArticle, TechArticle) instead of generic Thing",
      "Include all required properties for rich snippet eligibility",
      "Keep headline under 110 characters for better display",
      "Use high-quality images (1200x675px for articles, 400x400px for tools)",
      "Include structured data on every page type",
      "Update dateModified whenever content changes",
      "Use consistent author names across articles",
      "Add breadcrumbs to all non-homepage pages",
      "Include ratings only if based on real user feedback",
      "Validate markup with Google Rich Results Test before production"
    ],
    "performance": {
      "note": "JSON-LD has minimal performance impact",
      "tips": [
        "Generate schemas server-side in Next.js",
        "Cache schema generation for static content",
        "Minify JSON before injecting into HTML",
        "Consider using next/script with strategy='beforeInteractive'"
      ]
    }
  },

  "placeholderReference": {
    "description": "Complete list of all placeholders used in templates",
    "placeholders": {
      "ARTICLE_SLUG": "URL-safe article identifier (from database)",
      "ARTICLE_TITLE": "Article headline (max 110 chars recommended)",
      "ARTICLE_EXCERPT": "Brief summary (155-160 chars for SEO)",
      "ARTICLE_IMAGE_URL": "Full URL to featured image (1200x675px)",
      "ARTICLE_IMAGE_CAPTION": "Descriptive image caption",
      "PUBLISHED_DATE_ISO8601": "ISO 8601 format: 2025-12-10T14:30:00Z",
      "MODIFIED_DATE_ISO8601": "ISO 8601 format: 2025-12-10T14:30:00Z",
      "AUTHOR_NAME": "Full name of article author",
      "AUTHOR_SLUG": "URL-safe author identifier",
      "CATEGORY_NAME": "Human-readable category name",
      "CATEGORY_SLUG": "URL-safe category identifier",
      "COMMA_SEPARATED_TAGS": "tag1, tag2, tag3",
      "WORD_COUNT": "Number of words in article (integer)",
      "TOOL_NAME": "Official name of AI tool",
      "TOOL_SLUG": "URL-safe tool identifier",
      "TOOL_DESCRIPTION": "Tool description (155-160 chars)",
      "TOOL_LOGO_URL": "Full URL to tool logo (400x400px)",
      "CATEGORY": "Tool category (e.g., 'AI Writing Assistant')",
      "SUBCATEGORY": "More specific category",
      "VERSION": "Software version number",
      "RATING_VALUE": "Average rating (1.0-5.0)",
      "RATING_COUNT": "Total number of ratings",
      "LOW_PRICE": "Starting price in USD",
      "HIGH_PRICE": "Maximum price in USD",
      "PRICING_PLANS_COUNT": "Number of pricing tiers",
      "PLAN_NAME": "Pricing plan name (e.g., 'Pro')",
      "PRICE": "Plan price in USD",
      "VALID_UNTIL_DATE": "ISO 8601 date",
      "FEATURE_1": "Tool feature description",
      "PROVIDER_NAME": "Company behind the tool",
      "PROVIDER_URL": "Tool provider website",
      "QUESTION_1": "FAQ question text",
      "ANSWER_1": "FAQ answer text (can include HTML)",
      "LIST_TITLE": "Title of the list/collection",
      "LIST_DESCRIPTION": "Description of list contents",
      "TOTAL_ITEMS": "Number of items in list",
      "ITEM_TYPE": "Schema type (e.g., 'SoftwareApplication')",
      "ITEM_NAME": "Individual item name",
      "ITEM_PATH": "Relative URL path",
      "ITEM_IMAGE": "Item image URL",
      "ITEM_DESCRIPTION": "Item description",
      "CONTACT_EMAIL": "Support or contact email",
      "TWITTER_URL": "Full Twitter/X profile URL",
      "LINKEDIN_URL": "Full LinkedIn profile URL",
      "FACEBOOK_URL": "Full Facebook page URL",
      "YOUTUBE_URL": "Full YouTube channel URL"
    }
  },

  "notes": {
    "requiredVsRecommended": "requiredFields are minimum for valid schema. Include recommended fields for rich snippets.",
    "dynamicGeneration": "All schemas should be generated server-side with real data from Supabase",
    "multipleSchemas": "You can include multiple schema types on one page (e.g., Article + BreadcrumbList + Organization)",
    "validation": "Always validate with Google Rich Results Test before production deployment",
    "updates": "Review and update schemas quarterly to align with Schema.org updates"
  }
}
